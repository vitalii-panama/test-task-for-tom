<div class="cards-section">
  <div class="cards__title">{{ section.settings.heading }}</div>

  <div class="cards swiper js-slider-cards">
    <div class="cards__items swiper-wrapper">
      {% for block in section.blocks %}
        <div class="card swiper-slide">
          <div class="card__wrapper" style="background-color: {{ block.settings.color }}">
            {% if block.settings.img %}
              <div class="card__img">
                <img srcset="{{ block.settings.img | image_url }}" loading="lazy">
              </div>
            {% endif %}
            <div class="card__title">{{ block.settings.heading }}</div>
            <div class="card__info">{{ block.settings.subheading }}</div>
            <a class="card__btn" href="{{ block.settings.btn_url }}">{{ block.settings.btn }}</a>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>
