<div class="featured-products__title">{{ section.settings.heading }}</div>

<div class="product-slider">
  <div class="product-slider-prev">{% render 'icons' with name: 'arrow-prev' %}</div>

  <div class="swiper featured-products js-slider-products">
    <div class="featured-products__items swiper-wrapper">
      {% for block in section.blocks %}
        {% assign product = block.settings.product %}
        <div
          class="product swiper-slide"
          data-id="{{ product.first_available_variant.id }}"
          onclick="window.cartAdd(event)">
          {% if product.featured_image %}
            <div class="product__img">
              <img srcset="{{ product.featured_image | image_url }}" loading="lazy">
            </div>
          {% endif %}
          <div class="product__info">
            <div class="product__title">{{ product.title }}</div>
            <div class="product__price">{{ product.price | money_without_trailing_zeros }}</div>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
  <div class="product-slider-next">{% render 'icons' with name: 'arrow-next' %}</div>
</div>
<a class="shopAll" href="#">Shop all</a>
{% schema %}
  {
    "name": "Featured Products",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Heading"
      }
    ],
    "blocks": [
      {
        "type": "product",
        "name": "Product",
        "settings": [
          {
            "type": "product",
            "id": "product",
            "label": "Product"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Featured Products",
        "settings": {
          "heading": "PARTY A LA CARTE"
        },
        "blocks": [
          {
            "type": "product"
          }, {
            "type": "product"
          }, {
            "type": "product"
          }, {
            "type": "product"
          }
        ]
      }
    ]
  }
{% endschema %}